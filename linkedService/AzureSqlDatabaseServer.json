{
	"name": "AzureSqlDatabaseServer",
	"properties": {
		"parameters": {
			"sqlServerName": {
				"type": "string"
			},
			"sqlDatabaseName": {
				"type": "string"
			}
		},
		"annotations": [],
		"type": "AzureSqlDatabase",
		"typeProperties": {
			"connectionString": "Integrated Security=False;Encrypt=True;Connection Timeout=30;Data Source=@{linkedService().sqlServerName};Initial Catalog=@{linkedService().sqlDatabaseName};User ID=sqladmin",
			"password": {
				"type": "AzureKeyVaultSecret",
				"store": {
					"referenceName": "AzureKeyVaultConnection",
					"type": "LinkedServiceReference"
				},
				"secretName": "sec-sqladmin-password"
			}
		},
		"connectVia": {
			"referenceName": "AutoResolveIntegrationRuntime",
			"type": "IntegrationRuntimeReference"
		}
	},
	"type": "Microsoft.Synapse/workspaces/linkedservices"
}